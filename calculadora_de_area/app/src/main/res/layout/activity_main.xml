<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#202050"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginEnd="1dp"
        android:layout_marginStart="1dp"
        android:background="#202050"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:padding="30dp">

    <TextView
        android:id="@+id/tituloApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/fredoka"
        android:text="Cálculo de Área"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <ImageButton
        android:id="@+id/infoApp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="290dp"
        android:layout_marginTop="42dp"
        android:backgroundTint="#371d85"
        android:src="@drawable/info2"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/subTitleApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/fredoka"
        android:text="Selecione a operação que deseja fazer"
        android:textColor="#ffffff"
        android:textSize="19sp" />

    <Button
        android:id="@+id/btnQuadrado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="180dp"
        android:ems="23"
        android:fontFamily="@font/fredoka"
        android:backgroundTint="#371d85"
        android:text="Descobrir a área do quadrado"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnRetangulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="240dp"
        android:ems="23"
        android:textStyle="bold"
        android:fontFamily="@font/fredoka"
        android:backgroundTint="#371d85"
        android:text="Descobrir a área do retângulo"
        android:textAllCaps="false"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btnTriangulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="300dp"
        android:ems="23"
        android:textStyle="bold"
        android:fontFamily="@font/fredoka"
        android:backgroundTint="#371d85"
        android:text="Descobrir a área do triângulo"
        android:textAllCaps="false"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btnCirculo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="360dp"
        android:ems="23"
        android:textStyle="bold"
        android:fontFamily="@font/fredoka"
        android:backgroundTint="#371d85"
        android:text="Descobrir a área do círculo"
        android:textAllCaps="false"
        android:textSize="15sp" />

    </FrameLayout>

</LinearLayout>